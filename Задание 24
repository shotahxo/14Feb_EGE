s=open('24 (1).txt').readline()

mx=-10**20
K=0
a=0
for i in range(len(s)):
    if s[i]!=s[i-1] and K==0:
        K+=1
        a=s[i-1]
    if K>0 and s[i]==s[i-1]:
        K+=1
    if K>0 and s[i]!=s[i-1]:
        if s[i]==a:
            mx=max(mx,K)
            K=1
            a=s[i]
        else:
            K=1
            a=s[i-1]
    if K==5:
        print(s[i])
print(mx)
# Ответ: 
